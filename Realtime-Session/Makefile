WORKDIR = `pwd`

CC = gcc
CXX = g++
AR = ar
LD = g++
WINDRES = windres

INC = 
CFLAGS = -O2 -Wall -std=c++11
RESINC = 
LIBDIR = 
LIB = 
LDFLAGS = -lwebsockets -lpthread

INC_RELEASE = $(INC)
CFLAGS_RELEASE = $(CFLAGS) -O2
RESINC_RELEASE = $(RESINC)
RCFLAGS_RELEASE = $(RCFLAGS)
LIBDIR_RELEASE = $(LIBDIR)
LIB_RELEASE = $(LIB)
LDFLAGS_RELEASE = $(LDFLAGS) -s
OBJDIR_RELEASE = obj/Release
DEP_RELEASE = 
OUT_RELEASE = Realtime-Session

OBJ_RELEASE = $(OBJDIR_RELEASE)/main.o $(OBJDIR_RELEASE)/Json.o $(OBJDIR_RELEASE)/Session.o $(OBJDIR_RELEASE)/SocketServer.o $(OBJDIR_RELEASE)/Utils.o $(OBJDIR_RELEASE)/ClientConnection.o

all: release

clean: clean_release

before_release: 
	test -d $(OBJDIR_RELEASE) || mkdir -p $(OBJDIR_RELEASE)

after_release: 

release: before_release out_release after_release

out_release: before_release $(OBJ_RELEASE) $(DEP_RELEASE)
	$(LD) $(LIBDIR_RELEASE) -o $(OUT_RELEASE) $(OBJ_RELEASE)  $(LDFLAGS_RELEASE) $(LIB_RELEASE)

$(OBJDIR_RELEASE)/main.o: main.cpp
	$(CXX) $(CFLAGS_RELEASE) $(INC_RELEASE) -c main.cpp -o $(OBJDIR_RELEASE)/main.o

$(OBJDIR_RELEASE)/Json.o: Json.cpp
	$(CXX) $(CFLAGS_RELEASE) $(INC_RELEASE) -c Json.cpp -o $(OBJDIR_RELEASE)/Json.o

$(OBJDIR_RELEASE)/Session.o: Session.cpp
	$(CXX) $(CFLAGS_RELEASE) $(INC_RELEASE) -c Session.cpp -o $(OBJDIR_RELEASE)/Session.o

$(OBJDIR_RELEASE)/SocketServer.o: SocketServer.cpp
	$(CXX) $(CFLAGS_RELEASE) $(INC_RELEASE) -c SocketServer.cpp -o $(OBJDIR_RELEASE)/SocketServer.o

$(OBJDIR_RELEASE)/Utils.o: Utils.cpp
	$(CXX) $(CFLAGS_RELEASE) $(INC_RELEASE) -c Utils.cpp -o $(OBJDIR_RELEASE)/Utils.o

$(OBJDIR_RELEASE)/ClientConnection.o: ClientConnection.cpp
	$(CXX) $(CFLAGS_RELEASE) $(INC_RELEASE) -c ClientConnection.cpp -o $(OBJDIR_RELEASE)/ClientConnection.o

clean_release: 
	rm -f $(OBJ_RELEASE) $(OUT_RELEASE)
	rm -rf $(OBJDIR_RELEASE)

.PHONY: before_release after_release clean_release

